{
    "name": "@solana/octane-core",
    "version": "0.0.1",
    "description": "Tools to enable gasless transactions on Solana",
    "author": "Solana Maintainers <maintainers@solana.foundation>",
    "homepage": "https://github.com/solana-labs/octane",
    "repository": "https://github.com/solana-labs/octane",
    "license": "Apache-2.0",
    "types": "dist/types/index.d.ts",
    "module": "dist/index.js",
    "main": "dist/index.js",
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "clean": "shx rm -rf dist",
        "build": "yarn clean && tsc -p tsconfig.json",
        "test": "mocha",
        "test:live": "TEST_LIVE=1 yarn run test",
        "test:live-with-test-validator": "start-server-and-test 'solana-test-validator --reset --quiet' http://localhost:8899/health test:live",
        "lint": "prettier --check '{*,**/*}.{js,ts,jsx,tsx,json}'",
        "lint:fix": "eslint --fix --ext .ts . && yarn fmt",
        "fmt": "prettier --write '{*,**/*}.{js,ts,jsx,tsx,json}'"
    },
    "dependencies": {
        "@orca-so/whirlpools-sdk": "^0.5.0",
        "@project-serum/anchor": "^0.25.0",
        "@solana/spl-token": "^0.2.0",
        "@solana/web3.js": "^1.34.0",
        "bs58": "^4.0.1",
        "cache-manager": "^3.6.0",
        "encoding": "^0.1.13",
        "axios": "^0.27.2"
    },
    "devDependencies": {
        "@types/bn.js": "^5.1.0",
        "@types/bs58": "^4.0.1",
        "@types/cache-manager": "^3.4.2",
        "@types/chai-as-promised": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.13",
        "chai": "^4.3.4",
        "chai-as-promised": "^7.1.1",
        "eslint": "^8.4.1",
        "mocha": "^9.1.3",
        "prettier": "^2.5.1",
        "shx": "^0.3.3",
        "start-server-and-test": "^1.14.0",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    }
}
